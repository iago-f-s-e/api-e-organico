{
  "name": "react-api-e-organico",
  "version": "1.0.0",
  "main": "src/main.ts",
  "repository": "https://github.com/iago-f-s-e/api-e-organico.git",
  "author": "iago fagundes <iago.fagundes@outlook.com>",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:rm": "(rm -f ormconfig.json) && (rm -f seeds-ormconfig.json)",
    "typeorm:prepare": "yarn typeorm:rm && ts-node -r tsconfig-paths/register src/modules/database/config/config-file-generate.ts",
    "typeorm:run": "yarn typeorm:migration:run && yarn typeorm:seeds:run",
    "typeorm:migration:gen": "yarn typeorm migration:generate -p -d src/modules/database/cli/default-connection.ts",
    "typeorm:migration:run": "yarn typeorm migration:run -d src/modules/database/cli/default-connection.ts",
    "typeorm:seeds:create": "yarn typeorm migration:create -f seeds-ormconfig.json -c seeds -n",
    "typeorm:seeds:run": "yarn typeorm migration:run -f seeds-ormconfig.json -c seeds",
    "make:migration": "chmod +x ./infra/make-migration.sh && bash ./infra/make-migration.sh"
  },
  "dependencies": {
    "@nestjs/common": "^8.4.3",
    "@nestjs/core": "^8.4.3",
    "@nestjs/platform-express": "^8.4.3",
    "@nestjs/throttler": "^2.0.1",
    "@nestjs/typeorm": "^8.0.3",
    "class-transformer": "^0.5.1",
    "dotenv": "^16.0.0",
    "ioredis": "^5.0.3",
    "pg": "^8.7.3",
    "redis": "^4.0.6",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "typeorm": "0.3.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.2.4",
    "@nestjs/schematics": "^8.0.9",
    "@nestjs/testing": "^8.4.3",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.3"
  }
}
